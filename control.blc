@[CFunction (binding = "hello()", header = "main.h")]
extern function hello ()
@[CFunction (binding = "ping()", header = "main.h")]
extern function ping ()
@[CFunction (binding = "pong()", header = "main.h")]
extern function pong ()

@[EntryPoint]
activity Main () ()
    
    hello()

    repeat
        await true
        ping()

        await true
        pong()
    end
end